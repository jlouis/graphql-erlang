{erl_opts, 
 [warn_bif_clash,
  warn_deprecated_function,
  warn_export_all,
  warn_export_vars,
  warn_exported_vars,
  warn_format,
  %%warn_missing_spec,
  warn_obsolete_guard,
  warn_shadow_vars,
  warn_untyped_record,
  warn_unused_function,
  warn_unused_record,
  warn_unused_vars,
  debug_info,
  {parse_transform, lager_transform}
 ]}.

{cover_enabled, true}.

{deps,
 [{lager,
   {git, "https://github.com/erlang-lager/lager.git",
    {tag, "3.2.1"}}}
 ]}.

{profiles, [
    {test, [
        {deps, [{jsx, {git, "https://github.com/talentdeficit/jsx.git", {branch, "2.8.0"}}}
        ]}
    ]}
]}.
